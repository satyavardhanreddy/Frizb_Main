<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    tools:context=".forgotpassword">

    <TextView
        android:text="1.USE THE CODE AUTO-GENERATED BY OUR MACHINE TO RESET PASSWORD. \n\n2.AFTER UPDATING CODE THROUGH RESET EMAIL, SUBMIT YOUR EMAIL AND UPDATED CODE IN HITCHED BOX TO LOGIN.\n\n3.FURTHER YOU CAN CHANGE YOUR PASSWORD IN PROFILE PAGE USING TTG OPTION."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="29dp"/>



    <TextView
        android:id="@+id/code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="CODE:"
        android:textStyle="italic|bold"
        />


    <EditText
        android:id="@+id/femail"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_gravity="center"
        android:maxLines="1"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:background="@drawable/textbox"
        android:layout_marginTop="25dp"
        android:drawableStart="@drawable/ic_baseline_mail_outline_24"
        android:drawablePadding="10dp"
        android:hint="Enter Password Recovery Email"
        android:inputType="textEmailAddress"
        />


    <Button
        android:id="@+id/fbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="130sp"
        android:text="submit Email"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/femail" />

    <androidx.cardview.widget.CardView

        android:background="@color/white"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
       <LinearLayout
           android:id="@+id/id1"
           android:orientation="vertical"
           android:layout_margin="10dp"
           android:background="@drawable/textbox"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:text="HITCHED BOX"
               android:textStyle="bold"
               android:gravity="center_horizontal"
               android:layout_marginTop="10dp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <EditText
               android:id="@+id/uremail"
               android:layout_width="match_parent"
               android:layout_height="50sp"
               android:layout_gravity="center"
               android:layout_marginTop="25dp"
               android:drawableStart="@drawable/ic_baseline_mail_outline_24"
               android:drawablePadding="10dp"
               android:hint="Enter Email"
               android:maxLines="1"
               android:layout_margin="10dp"
               android:padding="10dp"
               android:background="@drawable/textbox"
               android:inputType="textEmailAddress"
               />
           <EditText
               android:id="@+id/maccode"
               android:layout_width="match_parent"
               android:layout_height="50sp"
               android:layout_gravity="center"
               android:layout_marginTop="25dp"
               android:layout_margin="10dp"
               android:padding="10dp"
               android:maxLines="1"
               android:drawablePadding="10dp"
               android:drawableStart="@drawable/ic_baseline_vpn_key_24"
               android:background="@drawable/textbox"
               android:hint="Enter Your updated Password"
               />
           <Button
               android:id="@+id/flbtn"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:text="submit"
               android:layout_marginTop="10dp"
               android:layout_margin="10dp"
               app:layout_constraintTop_toBottomOf="@+id/femail" />
       </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>